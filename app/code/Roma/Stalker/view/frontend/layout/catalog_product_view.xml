<page layout="1column" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="product.info.main">
            <container  name="cms-text-block" label="Cms text" htmlTag="div" htmlClass="text_cms" after="product.info.price">
            <block class="Magento\Cms\Block\Block" name="my_text_block">
                <arguments>
                    <argument name="block_id" xsi:type="string">my_text_block</argument>
                </arguments>
            </block>
            </container>
        </referenceContainer>
        <referenceContainer name="product.info.media">
            <block class="Roma\Stalker\Block\Stalker" name="custom.block.to.desk" template="Roma_Stalker::main-stalker-template.phtml" after="-"/>
        </referenceContainer>
    </body>
</page>
